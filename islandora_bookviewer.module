<?php

/**
 * @file
 *
 * Defines all the hooks this module implements.
 */

/**
 * Implements hook_menu().
 */
function islandora_bookviewer_menu() {
  return array(
    'admin/islandora/bookreader' => array(
      'title' => 'Internet Archive BookReader',
      'description' => 'Configure the Internet Archive BookReader.',
      'page callback' => 'drupal_get_form',
      'page arguments' => array('islandora_bookreader_admin_settings_form'),
      'access arguments' => array('administer site configuration'),
      'file' => 'islandora_bookreader.admin.inc',
      'type' => MENU_NORMAL_ITEM,
    ),
    'bookreader_ocr/%islandora_object' => array(
      'page callback' => 'islandora_bookreader_get_ocr',
      'page arguments' => array(2),
      'access callback' => 'islandora_object_access_callback',
      'access arguments' => array(FEDORA_VIEW, 2),
      'file' => 'includes/ocr.callback.inc',
      'type' => MENU_CALLBACK,
    ),
    'bookreader_search/%/%' => array(
      'page callback' => 'islandora_bookviewer_search',
      'page arguments' => array(1, 2),
      'access callback' => 'user_access',
      'access arguments' => array(FEDORA_VIEW),
      'file' => 'includes/search.callback.inc',
      'type' => MENU_CALLBACK,
    )
  );
}

/**
 * Implements hook_theme().
 */
function islandora_bookviewer_theme() {
  return array(
    'islandora_bookviewer_internet_archive_bookreader' => array(
      'file' => 'theme/islandora_bookreader.theme.inc',
      'template' => 'theme/islandora-bookviewer-internet-archive-bookreader',
      'variables' => array(
        'object' => NULL,
        'page_progression' => 'lr',
        'pages' => array(),
        'height' => 960,
        'width' => 600
      )
    ),
    'islandora_bookviewer_info' => array(
      'file' => 'theme/islandora_bookreader.theme.inc',
      'variables' => array('object' => NULL),
    )
  );
}

/**
 * Implements hook_islandora_viewer_info().
 */
function islandora_bookviewer_islandora_viewer_info() {
  return array(
    'islandora_bookviewer' => array(
      'label' => t('Internet Archive BookReader'),
      'description' => t('Internet Archive BookReader with Djatoka as tilesource.'),
      'configuration' => 'admin/islandora/bookreader',
      'callback' => 'islandora_bookviewer_viewer_callback',
      'mimetype' => array('image/jp2'),
    ),
  );
}

/**
 * Callback function for the viewer.
 *
 * @param string $uri
 *  Image url be passed to the viewer.
 *
 * @return string
 *  HTML repersentation of the OpenSeadragon viewer
 */
function islandora_bookviewer_viewer_callback(array $params) {
  return theme('islandora_bookviewer_internet_archive_bookreader', $params);
}
